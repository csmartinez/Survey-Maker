<h1><%= @survey.name %> Survey!</h1>
<a href="/surveys/edit_survey">Update Survey Name</a>

<form action="/add_question" method="post">
  <input type="hidden" name="survey_id" value="<%= @survey.id() %>">
  <label for="ask">Add question</label>
  <input id="ask" name="ask" type="text">?

  <button type="submit">Submit new question</button>
</form>


<% @survey.questions.each() do |question| %>
<li><%= question.ask %>? <form><input id="answer" name="answer" type="text"></form></li>
<% end %>

<form>
<button type="submit" class="btn btn-default">Enter</button>
</form>
