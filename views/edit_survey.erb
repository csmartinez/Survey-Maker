<h1>Update <%=@survey.name() %> </h1>

<form action="/survey/<%= @survey.id() %>" method="post">
  <input name="survey_id" type="hidden" value="patch">
  <label for="survey_id">Rename your survey:</label>
  <input id="survey_id" name="survey_id" type="text">

  <button type="submit">Update</button>
</form>


<form action="/survey/<%= @survey.id() %>" method="post">
